<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.publish.PublishFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/publisment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/transparent">

            <!-- TODO: 取消按钮返回原界面 -->
            <Button
                android:id="@+id/button_cancel"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:text="@string/action_cancel"
                android:textSize="@dimen/text_size"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="#00000000" />

            <!-- TODO: 发布新商品，返回原界面并刷新 -->
            <Button
                android:id="@+id/button_launch"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="@string/action_publish"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="@drawable/btn_launch"
                android:enabled="false"/>
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/publisment"
            android:layout_margin="10dp"
            android:background="@color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editText_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="商品名称"
                    android:textColorHint="@color/gray"
                    android:gravity="top"
                    android:padding="10dp"
                    android:background="@color/transparent">
                </EditText>

                <EditText
                    android:id="@+id/editText_description"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:hint="简单描述你的商品..."
                    android:textColorHint="@color/gray"
                    android:gravity="top"
                    android:padding="10dp"
                    android:background="@color/transparent">
                </EditText>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/layout_picture"
            android:layout_below="@id/cardView_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <!-- TODO: 不同数量图片 -->
            <GridView
                android:id="@+id/gridView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="5dp"
                android:numColumns="3"
                android:verticalSpacing="5dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_check"
            android:layout_below="@id/layout_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <CheckBox
                android:id="@+id/if_new"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text="@string/checkbox_isNew"
                android:button="@null"
                android:textSize="@dimen/text_size"
                android:layout_marginStart="30dp"
                android:padding="@dimen/publish_checkBox_padding"
                android:textColor="@color/black"
                android:background="@color/transparent"
                android:checked="false"/>

            <CheckBox
                android:id="@+id/if_bargain"
                android:layout_toEndOf="@+id/if_new"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text="@string/checkbox_canNotBargain"
                android:button="@null"
                android:textSize="@dimen/text_size"
                android:layout_marginStart="30dp"
                android:padding="@dimen/publish_checkBox_padding"
                android:textColor="@color/black"
                android:background="@color/transparent"
                android:checked="false"/>

        </RelativeLayout>

        <View
            android:id="@+id/divider1"
            android:layout_below="@id/layout_check"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <!-- TODO:以下都为layout的点击事件 -->
        <!-- 点击后以Dialog形式输入价格，显示在textview中 -->
        <LinearLayout
            android:id="@+id/layout_price"
            android:layout_below="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/publish_text_height"
                android:layout_height="@dimen/publish_text_height"
                android:src="@drawable/ic_money"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/publish_text_height"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="@string/product_price"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/publish_text_height"
                android:layout_gravity="center"
                android:text="@string/price_symbol"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:layout_marginEnd="5dp"/>

            <EditText
                android:id="@+id/text_price_number"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/publish_text_height"
                android:text="@string/price_number"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                android:enabled="false"/>

            <ImageView
                android:layout_width="@dimen/publish_text_height"
                android:layout_height="@dimen/publish_text_height"
                android:src="@drawable/ic_right"/>
        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_below="@id/layout_price"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:id="@+id/layout_tab"
            android:layout_below="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic2"
                android:layout_width="@dimen/publish_text_height"
                android:layout_height="@dimen/publish_text_height"
                android:src="@drawable/ic_tab"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/publish_text_height"
                android:layout_weight="1"
                android:text="标签"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>

            <EditText
                android:id="@+id/text_tab"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/publish_text_height"
                android:enabled="false"/>

            <ImageView
                android:layout_width="@dimen/publish_text_height"
                android:layout_height="@dimen/publish_text_height"
                android:src="@drawable/ic_right"/>
        </LinearLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/layout_tab"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/layout_category"
            android:layout_below="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_sort"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/publish_text_height"
                android:layout_weight="1"
                android:text="@string/category"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>

            <EditText
                android:id="@+id/text_category"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:enabled="false"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:src="@drawable/ic_right"/>
        </LinearLayout>

        <View
            android:id="@+id/divider4"
            android:layout_below="@id/layout_category"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>