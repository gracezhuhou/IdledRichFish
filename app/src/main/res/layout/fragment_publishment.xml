<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".PublishmentFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/publisment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/transparent">
            <!-- TODO: 取消按钮返回原界面 -->
            <Button
                android:id="@+id/item_concel"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:text="取消"
                android:textSize="@dimen/text_size"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="#00000000" />
            <!-- TODO: 发布新商品，返回原界面并刷新 -->
            <Button
                android:id="@+id/item_launch"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="发布"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="@drawable/btn_launch" />
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/publisment"
            android:layout_margin="10dp"
            android:background="@color/transparent">

            <EditText
                android:id="@+id/editText_description"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:hint="简单描述你的商品..."
                android:textColorHint="@color/gray"
                android:gravity="top"
                android:padding="10dp"
                android:background="@color/transparent">
            </EditText>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/item_picture"
            android:layout_below="@id/cardView_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <!-- TODO: 不同数量图片 -->
            <GridView
                android:id="@+id/gridView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="5dp"
                android:numColumns="3"
                android:verticalSpacing="5dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_check"
            android:layout_below="@id/item_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <!-- TODO: 两个checkbox事件 -->
            <CheckBox
                android:id="@+id/if_new"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text="全新"
                android:button="@null"
                android:textSize="@dimen/text_size"
                android:layout_marginLeft="50dp"
                android:textColor="@color/black"
                android:background="@color/transparent"
                />
            <CheckBox
                android:id="@+id/if_bargin"
                android:layout_toRightOf="@+id/if_new"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text="不讲价"
                android:button="@null"
                android:textSize="@dimen/text_size"
                android:layout_marginLeft="50dp"
                android:textColor="@color/black"
                android:background="@color/transparent"
                />

        </RelativeLayout>

        <View
            android:id="@+id/line1"
            android:layout_below="@id/item_check"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <!-- TODO:以下都为relativelayout的点击事件 -->
        <RelativeLayout
            android:id="@+id/item_price"
            android:layout_below="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/ic_price"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_money"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ic_price"
                android:layout_marginLeft="10dp"/>

            <!-- TODO:以alertdialog形式输入价格，显示在textview中 -->
            <TextView
                android:id="@+id/show_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/im1"
                android:layout_marginRight="20dp"/>
            <ImageView
                android:id="@+id/im1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/line2"
            android:layout_below="@id/item_price"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <RelativeLayout
            android:id="@+id/item_tab"
            android:layout_below="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/ic2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_tab"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标签"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ic2"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/line3"
            android:layout_below="@id/item_tab"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <RelativeLayout
            android:id="@+id/item_sort"
            android:layout_below="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/ic3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_sort"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分类"
                android:textSize="@dimen/text_size"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ic3"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:id="@+id/line4"
            android:layout_below="@id/item_sort"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>